@page

@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.Pages.IndexModel
@{
    ViewData["Title"] = "TIC-TAC-TWO";
}

<h1 class="main-part-header">TIC-TAC-TWO</h1>


<div class="main-part-content">
    <div class="main-part-content-authentication-box">
        <span>Hello and welcome to the world-famous game TIC-TAC-TWO!</span>
        <span>Please select one of the options:</span>
        <form action="" method="post">
            <div class="form-group">
                <label class="control-label"></label>
                <select class="form-select" asp-for="UserChoice" asp-items="Model.LoginSelectList"></select>
                <input type="submit" value="Choose"/>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(Model.UserChoice))
        {
            <div class="alert alert-success mt-3">
                <strong>You selected:</strong> @Model.UserChoice
            </div>
        }
    </div>
</div>





