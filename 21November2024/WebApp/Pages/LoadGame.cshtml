@page
@model WebApp.Pages.LoadGame

@{
    ViewData["Title"] = "TIC-TAC-TWO";
    Layout = "~/Pages/Shared/_CustomLayout.cshtml";
    ViewData["UserName"] = Model.UserName;
}

<h1 class="main-part-header">TIC-TAC-TWO</h1>

<div class="main-part-content">
    <div class="main-part-content-authentication-box">
        @if (!Model.LoadGameSelectList.Any())
        {
            <span>You don't have any saved games! Go to join any or create one yourself!</span>
        }
        else
        {
            <span>Select a saved game to continue!</span>
            <form action="" method="post">
                <div class="form-group">
                    <label asp-for="UserChoice" class="control-label">Make your choice: </label>
                    <select class="form-select" asp-for="UserChoice" asp-items="Model.LoadGameSelectList"></select>
                    <input type="submit" value="Continue"/>
                </div>
            </form>
        }
        
        @if (!string.IsNullOrEmpty(@Model.SuccessMessage))
        {
            <div class="alert alert-success" role="alert">
                @Model.SuccessMessage
            </div>
        }

    </div>
</div>